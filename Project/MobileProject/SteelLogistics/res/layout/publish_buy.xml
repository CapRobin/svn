            <!-- <TextView -->
            <!-- android:id="@+id/cdText" -->
            <!-- android:layout_width="100dip" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:layout_centerVertical="true" -->
            <!-- android:layout_gravity="center_vertical" -->
