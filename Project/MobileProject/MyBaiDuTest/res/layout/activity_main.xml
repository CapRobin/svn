<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:visibility="visible" >

    <TextView
        android:id="@+id/text_01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="发布货源信息"
        android:textSize="22sp" />

    <RelativeLayout
        android:id="@+id/relayout_01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_01"
        android:layout_marginTop="20dip" >

        <TextView
            android:id="@+id/text_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="起点："
            android:textSize="18sp" />

        <EditText
            android:id="@+id/qdAdress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text_02"
            android:hint="请输入起点位置"
            android:textSize="11sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relayout_02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relayout_01"
        android:layout_marginTop="10dip" >

        <TextView
            android:id="@+id/text_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="终点："
            android:textSize="18sp" />

        <EditText
            android:id="@+id/zdAdress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text_03"
            android:hint="请输入终点位置"
            android:textSize="11sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relayout_03"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relayout_02"
        android:layout_marginTop="10dip" >

        <TextView
            android:id="@+id/result1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="正在获取您当前的经纬度......" />

        <TextView
            android:id="@+id/result2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result1"
            android:text="正在获取您当前j具体地址......" />

        <TextView
            android:id="@+id/qidian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result2"
            android:text="起点："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/start_node"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result2"
            android:layout_toRightOf="@+id/qidian"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/zhongdian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qidian"
            android:text="终点："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/end_node"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qidian"
            android:layout_toRightOf="@+id/zhongdian"
            android:textSize="13sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/naviBut"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dip"
        android:text="开始导航" />

</RelativeLayout>