<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    
           <LinearLayout
                android:id="@+id/infoLayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/majorLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/auctionIdText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dip"
                        android:paddingLeft="10dip"
                        android:paddingTop="10dip"
                        android:text="竞价编号"
                        android:textColor="@color/balck"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/auctionId"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_toRightOf="@+id/auctionIdText"
                        android:background="@color/transparent"
                        android:textColor="@color/text_color3" />
                </RelativeLayout>
                
                <RelativeLayout
                    android:id="@+id/majorLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/driverNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dip"
                        android:paddingLeft="10dip"
                        android:paddingTop="10dip"
                        android:text="竞价名称"
                        android:textColor="@color/balck"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/driverName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_toRightOf="@+id/driverNameText"
                        android:background="@color/transparent"
                        android:textColor="@color/text_color3" />
                </RelativeLayout>
                
                <RelativeLayout
                    android:id="@+id/majorLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                   android:orientation="horizontal" 
                    >

                    <TextView
                        android:id="@+id/driver_moneyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dip"
                        android:paddingLeft="10dip"
                        android:paddingTop="10dip"
                        android:text="竞价人出价"
                        android:textColor="@color/balck"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/driver_money"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_toRightOf="@+id/driver_moneyText"
                        android:background="@color/transparent"
                        android:textColor="@color/text_color3" />
                </RelativeLayout>
    </LinearLayout>
    
