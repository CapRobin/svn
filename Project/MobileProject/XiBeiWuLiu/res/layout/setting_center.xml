<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_bg" >

    <LinearLayout
        android:id="@+id/infoLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="40dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layout_01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_bg_up_selector_login"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/hospitalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:text="个人信息"
                android:textColor="@color/balck"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/hospitalName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="25dip"
                android:layout_toRightOf="@+id/hospitalText"
                android:textColor="@color/text_color3" />

            <ImageView
                android:id="@+id/hospitalDetail"
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:background="@drawable/detail" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_bg_center_selector_login"
            android:orientation="horizontal" >

