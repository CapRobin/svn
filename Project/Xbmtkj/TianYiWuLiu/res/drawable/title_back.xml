<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--  Active button -->
    <item android:state_selected="true" android:state_focused="false"
        android:state_pressed="false" android:drawable="@drawable/title_back_pressed" />
    
    <!--  Inactive button -->
    <item android:state_selected="false" android:state_focused="false"
        android:state_pressed="false" android:drawable="@drawable/title_back_normal" />

    <!--  Pressed button -->
    <item android:state_pressed="true" android:drawable="@drawable/title_back_normal" />

    <!--  Selected button (using d-pad) -->
    <item android:state_focused="true" android:state_selected="true"
        android:state_pressed="false" android:drawable="@drawable/title_back_pressed" />
</selector>